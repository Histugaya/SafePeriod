<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/tips_userid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Posted By"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tips_postDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tips_userid"
                android:text="date"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tips_postTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tips_postDate"
                android:text="Title"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/tips_postDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tips_postTitle"
                android:text="Description..."
                android:textSize="24dp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>