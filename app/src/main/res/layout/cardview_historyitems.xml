<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/history_sn_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sn."
                android:textSize="24dp" />

            <TextView
                android:id="@+id/history_dateStarted_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/history_sn_id"
                android:text="Date Started"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/history_noOfDays_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/history_dateStarted_id"
                android:text="number of days"
                android:textSize="24dp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>